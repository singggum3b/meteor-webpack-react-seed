.v-bag
	position relative
	margin-left auto
	margin-right auto
	canvas
		display block

.v-bag-control
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	.b-overlay
		z-index 2
		opacity 0 !important
		transition none !important

.v-palett-area
	position relative
	.palette-wrapper
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		z-index 99
	
	&.-body
		.palette-wrapper
			transform translate(-90%,-95%)
	&.-sidePanels
		.palette-wrapper
			transform translate(-50%,-110%)
			
	&.-trim
		.palette-wrapper
			transform translate(-28%,-104%)
			
	&.-hardware
		.palette-wrapper
			transform translate(-50%, 10%)
		
	.v-palette-trigger
		position absolute
		color black
		background-color rgba(white,0.4)
		width 2.25em
		height 2.25em
		cursor pointer
		&:before
			position absolute
			top 0
			right 0
			content ""
			display inline-block
			width 25%
			height 25%
			border-right 2px solid black
			border-top 2px solid black
		&:after
			position absolute
			top 0
			left 0
			content ""
			display inline-block
			width 25%
			height 25%
			border-right 2px solid black
			border-top 2px solid black
			transform rotate(-90deg)


		> a
			display block
			width 100%
			height 100%
			font-size 0

			&:before
				position absolute
				bottom 0
				left 0
				content ""
				display inline-block
				width 25%
				height 25%
				border-right 2px solid black
				border-top 2px solid black
				transform rotate(-180deg)
			&:after
				position absolute
				bottom 0
				right 0
				content ""
				display inline-block
				width 25%
				height 25%
				border-right 2px solid black
				border-top 2px solid black
				transform rotate(90deg)
			> span
				display block
				width 100%
				height 100%
				font-size 0

				&:before
					position absolute
					top 25%
					left 50%
					content ""
					display block
					width 1px
					height 50%
					background-color black

				&:after
					position absolute
					left 25%
					top 50%
					content ""
					display block
					height 1px
					width 50%
					background-color black
		&:hover,
		&:focus
			background-color rgba(black,0.2)
			&:before
				border-color white
			&:after
				border-color white
			> a
				&:before
					border-color white
				&:after
					border-color white
				> span
					&:before
						background-color white

					&:after
						background-color white






